<div class="author">
  <h1 class="author__heading">Hi, I am Majd.</h1>
  <p class="author__body">Web developer and content creator.</p>
</div>

<img src="/img/hero.jpg" class="hero-image" width="900" height="500" />

<section class="articles">
  <h2 class="article__heading">Latest Posts</h2>

  <ul class="article-ul">
    <% posts.forEach(post => { %>
    <li>
      <a href="/posts/<%= post._id %>">
        <span><%= post.title %></span>
        <span class="article-list__date">
          <%= post.createdAt.toDateString() %></span
        >
      </a>
    </li>
    <% }) %>
  </ul>

  <% if (nextPage !== null) { %>
  <a href="/?page=<%= nextPage  %>" class="pagination">&lt; View Older Posts</a>
  <% } %>
</section>
